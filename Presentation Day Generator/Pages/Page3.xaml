<Page x:Class="Presentation_Day_Generator.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Presentation_Day_Generator"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page3">

    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Rectangle Fill="DarkOrange" />
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" TextAlignment="Center" FontSize="24" Foreground="White">Ready to go!</TextBlock>

        <Button x:Name="btnSettings" Grid.Row="1" Grid.Column="0" Height="70" Width="150" Background="{x:Null}" Foreground="White" FontSize="18" Click="btnSettings_Click">Settings</Button>
        

    </Grid>
</Page>
